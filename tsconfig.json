{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowUnreachableCode": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}